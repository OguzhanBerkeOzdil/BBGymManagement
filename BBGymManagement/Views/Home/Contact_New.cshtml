@{
    var currentLang = ViewBag.CurrentLanguage as string ?? Session["Language"] as string ?? "en";
    ViewBag.Title = (currentLang == "tr" ? "İletişim" : "Contact") + " - BB Gym";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="page-header text-center" style="padding: 60px 0; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 20px; margin-bottom: 40px;">
        <h1 class="display-4 mb-3">
            <i class="fas fa-phone me-3"></i>
            @(currentLang == "tr" ? "İletişim" : "Contact Us")
        </h1>
        <p class="lead fs-5">
            @(currentLang == "tr" ? "Size nasıl yardımcı olabiliriz?" : "How can we help you?")
        </p>
    </div>

    <div class="row g-4">
        <!-- Contact Form -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg" style="border-radius: 20px;">
                <div class="card-body p-5">
                    <h2 class="h3 mb-4 text-primary">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        @(currentLang == "tr" ? "Bize Mesaj Gönderin" : "Send Us a Message")
                    </h2>
                    
                    <form id="contactForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="@(currentLang == "tr" ? "Adınız" : "Your Name")" required>
                                    <label for="name">
                                        <i class="fas fa-user me-2"></i>
                                        @(currentLang == "tr" ? "Adınız" : "Your Name") *
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="@(currentLang == "tr" ? "E-posta adresiniz" : "Your Email")" required>
                                    <label for="email">
                                        <i class="fas fa-envelope me-2"></i>
                                        @(currentLang == "tr" ? "E-posta" : "Email") *
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="tel" class="form-control" id="phone" placeholder="@(currentLang == "tr" ? "Telefon numaranız" : "Your Phone")">
                                    <label for="phone">
                                        <i class="fas fa-phone me-2"></i>
                                        @(currentLang == "tr" ? "Telefon" : "Phone")
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" id="subject" required>
                                        <option value="">@(currentLang == "tr" ? "Konu seçin" : "Select Subject")</option>
                                        <option value="membership">@(currentLang == "tr" ? "Üyelik Bilgisi" : "Membership Info")</option>
                                        <option value="training">@(currentLang == "tr" ? "Antrenman Programları" : "Training Programs")</option>
                                        <option value="pricing">@(currentLang == "tr" ? "Fiyat Bilgisi" : "Pricing Info")</option>
                                        <option value="other">@(currentLang == "tr" ? "Diğer" : "Other")</option>
                                    </select>
                                    <label for="subject">
                                        <i class="fas fa-tag me-2"></i>
                                        @(currentLang == "tr" ? "Konu" : "Subject") *
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" id="message" style="height: 120px" placeholder="@(currentLang == "tr" ? "Mesajınız" : "Your Message")" required></textarea>
                                    <label for="message">
                                        <i class="fas fa-comment me-2"></i>
                                        @(currentLang == "tr" ? "Mesajınız" : "Your Message") *
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    @(currentLang == "tr" ? "Mesajı Gönder" : "Send Message")
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Contact Info -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg mb-4" style="border-radius: 20px;">
                <div class="card-body p-4">
                    <h4 class="card-title mb-4">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        @(currentLang == "tr" ? "İletişim Bilgileri" : "Contact Information")
                    </h4>
                    
                    <div class="d-flex align-items-start mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-map-marker-alt text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">@(currentLang == "tr" ? "Adres" : "Address")</h6>
                            <p class="text-muted mb-0">
                                @(currentLang == "tr" ? "Merkez Mah. Fitness Cad. No: 123<br>Şişli / İstanbul" : "Center District. Fitness Street. No: 123<br>Şişli / Istanbul")
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-phone text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">@(currentLang == "tr" ? "Telefon" : "Phone")</h6>
                            <p class="text-muted mb-0">
                                +90 212 555 0123<br>
                                +90 535 555 0123
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-envelope text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">Email</h6>
                            <p class="text-muted mb-0">
                                info@bbgym.com<br>
                                support@bbgym.com
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-clock text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">@(currentLang == "tr" ? "Çalışma Saatleri" : "Working Hours")</h6>
                            <p class="text-muted mb-0">
                                @(currentLang == "tr" ? "Pazartesi - Pazar<br>06:00 - 24:00" : "Monday - Sunday<br>06:00 - 24:00")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Social Media -->
            <div class="card border-0 shadow-lg" style="border-radius: 20px;">
                <div class="card-body p-4 text-center">
                    <h5 class="card-title mb-3">
                        @(currentLang == "tr" ? "Sosyal Medya" : "Follow Us")
                    </h5>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="btn btn-outline-primary rounded-circle p-3">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-outline-info rounded-circle p-3">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-danger rounded-circle p-3">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="btn btn-outline-success rounded-circle p-3">
                            <i class="fab fa-whatsapp"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-lg" style="border-radius: 20px;">
                <div class="card-body p-0">
                    <div style="height: 400px; border-radius: 20px; overflow: hidden; background: linear-gradient(45deg, #f8f9fa, #e9ecef); display: flex; align-items: center; justify-content: center;">
                        <div class="text-center text-muted">
                            <i class="fas fa-map-marked-alt fa-3x mb-3"></i>
                            <h5>@(currentLang == "tr" ? "Harita Yükleniyor..." : "Map Loading...")</h5>
                            <p>@(currentLang == "tr" ? "BB Gym - Merkez Şube" : "BB Gym - Central Branch")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Form validation
    const name = document.getElementById('name').value;
    const email = document.getElementById('email').value;
    const subject = document.getElementById('subject').value;
    const message = document.getElementById('message').value;
    
    if (name && email && subject && message) {
        alert('@(currentLang == "tr" ? "Mesajınız başarıyla gönderildi! En kısa sürede size dönüş yapacağız." : "Your message has been sent successfully! We will get back to you soon.")');
        this.reset();
    } else {
        alert('@(currentLang == "tr" ? "Lütfen tüm zorunlu alanları doldurun." : "Please fill in all required fields.")');
    }
});
</script>
