
@{
    var currentLang = ViewBag.CurrentLanguage as string ?? Session["Language"] as string ?? "en";
    ViewBag.Title = currentLang == "tr" ? "Dashboard" : "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container" style="padding: 30px;">
    <!-- Dashboard Header -->
    <div class="dashboard-header text-center mb-5">
        <h1 style="color: #2c3e50; font-weight: 700; margin-bottom: 10px;">
            <i class="fas fa-tachometer-alt me-3"></i>
            @(currentLang == "tr" ? "BB Gym Admin Dashboard" : "BB Gym Admin Dashboard")
        </h1>
        <p class="lead text-muted">@(currentLang == "tr" ? "Spor salonu yönetim paneline hoş geldiniz" : "Welcome to the gym management panel")</p>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row mb-5">
        <div class="col-xl-3 col-lg-6 col-md-6 mb-4">
            <div class="stats-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 20px; padding: 30px; box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3); transition: transform 0.3s ease;">
                <div class="d-flex align-items-center">
                    <div class="stats-icon me-3">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <div>
                        <h3 class="mb-0" style="font-size: 2.5rem; font-weight: 700;">156</h3>
                        <p class="mb-0">@(currentLang == "tr" ? "Toplam Üye" : "Total Members")</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-lg-6 col-md-6 mb-4">
            <div class="stats-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border-radius: 20px; padding: 30px; box-shadow: 0 10px 30px rgba(240, 147, 251, 0.3); transition: transform 0.3s ease;">
                <div class="d-flex align-items-center">
                    <div class="stats-icon me-3">
                        <i class="fas fa-shopping-cart fa-3x"></i>
                    </div>
                    <div>
                        <h3 class="mb-0" style="font-size: 2.5rem; font-weight: 700;">89</h3>
                        <p class="mb-0">@(currentLang == "tr" ? "Aktif Sipariş" : "Active Orders")</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-lg-6 col-md-6 mb-4">
            <div class="stats-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; border-radius: 20px; padding: 30px; box-shadow: 0 10px 30px rgba(79, 172, 254, 0.3); transition: transform 0.3s ease;">
                <div class="d-flex align-items-center">
                    <div class="stats-icon me-3">
                        <i class="fas fa-dumbbell fa-3x"></i>
                    </div>
                    <div>
                        <h3 class="mb-0" style="font-size: 2.5rem; font-weight: 700;">23</h3>
                        <p class="mb-0">@(currentLang == "tr" ? "Ürün Çeşidi" : "Product Types")</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-lg-6 col-md-6 mb-4">
            <div class="stats-card" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); color: white; border-radius: 20px; padding: 30px; box-shadow: 0 10px 30px rgba(250, 112, 154, 0.3); transition: transform 0.3s ease;">
                <div class="d-flex align-items-center">
                    <div class="stats-icon me-3">
                        <i class="fas fa-chart-line fa-3x"></i>
                    </div>
                    <div>
                        <h3 class="mb-0" style="font-size: 2.5rem; font-weight: 700;">₺45K</h3>
                        <p class="mb-0">@(currentLang == "tr" ? "Aylık Gelir" : "Monthly Revenue")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card" style="border: none; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 20px 20px 0 0; padding: 20px;">
                    <h4 class="mb-0"><i class="fas fa-bolt me-2"></i>@(currentLang == "tr" ? "Hızlı İşlemler" : "Quick Actions")</h4>
                </div>
                <div class="card-body" style="padding: 30px;">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Customers")" class="btn btn-outline-primary btn-lg w-100" style="height: 80px; border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-direction: column; text-decoration: none;">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <span>@(currentLang == "tr" ? "Yeni Üye" : "New Member")</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Products")" class="btn btn-outline-success btn-lg w-100" style="height: 80px; border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-direction: column; text-decoration: none;">
                                <i class="fas fa-plus-circle fa-2x mb-2"></i>
                                <span>@(currentLang == "tr" ? "Yeni Ürün" : "New Product")</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Orders")" class="btn btn-outline-warning btn-lg w-100" style="height: 80px; border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-direction: column; text-decoration: none;">
                                <i class="fas fa-shopping-bag fa-2x mb-2"></i>
                                <span>@(currentLang == "tr" ? "Siparişler" : "Orders")</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Rols")" class="btn btn-outline-info btn-lg w-100" style="height: 80px; border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-direction: column; text-decoration: none;">
                                <i class="fas fa-cog fa-2x mb-2"></i>
                                <span>@(currentLang == "tr" ? "Ayarlar" : "Settings")</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & System Info -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card" style="border: none; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); height: 100%;">
                <div class="card-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border-radius: 20px 20px 0 0; padding: 20px;">
                    <h4 class="mb-0"><i class="fas fa-clock me-2"></i>@(currentLang == "tr" ? "Son Aktiviteler" : "Recent Activities")</h4>
                </div>
                <div class="card-body" style="padding: 30px;">
                    <div class="activity-list">
                        <div class="activity-item d-flex align-items-center mb-3 p-3" style="background: #f8f9fa; border-radius: 15px;">
                            <div class="activity-icon me-3" style="background: #667eea; color: white; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div>
                                <strong>@(currentLang == "tr" ? "Yeni üye kaydı:" : "New member registration:")</strong> Ahmet Yılmaz<br>
                                <small class="text-muted">@(currentLang == "tr" ? "2 saat önce" : "2 hours ago")</small>
                            </div>
                        </div>
                        
                        <div class="activity-item d-flex align-items-center mb-3 p-3" style="background: #f8f9fa; border-radius: 15px;">
                            <div class="activity-icon me-3" style="background: #f093fb; color: white; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div>
                                <strong>@(currentLang == "tr" ? "Yeni sipariş:" : "New order:")</strong> @(currentLang == "tr" ? "Protein tozu siparişi" : "Protein powder order")<br>
                                <small class="text-muted">@(currentLang == "tr" ? "4 saat önce" : "4 hours ago")</small>
                            </div>
                        </div>
                        
                        <div class="activity-item d-flex align-items-center mb-3 p-3" style="background: #f8f9fa; border-radius: 15px;">
                            <div class="activity-icon me-3" style="background: #4facfe; color: white; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <div>
                                <strong>@(currentLang == "tr" ? "Ödeme alındı:" : "Payment received:")</strong> @(currentLang == "tr" ? "Premium üyelik" : "Premium membership") - ₺299<br>
                                <small class="text-muted">@(currentLang == "tr" ? "6 saat önce" : "6 hours ago")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-4">
            <div class="card" style="border: none; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); height: 100%;">
                <div class="card-header" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; border-radius: 20px 20px 0 0; padding: 20px;">
                    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>@(currentLang == "tr" ? "Sistem Bilgileri" : "System Information")</h4>
                </div>
                <div class="card-body" style="padding: 30px;">
                    <div class="system-info">
                        <div class="info-item mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-server me-2 text-primary"></i>@(currentLang == "tr" ? "Sistem Durumu" : "System Status")</span>
                                <span class="badge bg-success" style="border-radius: 20px;">@(currentLang == "tr" ? "Çevrimiçi" : "Online")</span>
                            </div>
                        </div>
                        
                        <div class="info-item mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-database me-2 text-info"></i>Veritabanı</span>
                                <span class="badge bg-success" style="border-radius: 20px;">Bağlı</span>
                            </div>
                        </div>
                        
                        <div class="info-item mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-users me-2 text-warning"></i>Aktif Kullanıcı</span>
                                <span class="badge bg-primary" style="border-radius: 20px;">12</span>
                            </div>
                        </div>
                        
                        <div class="info-item mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-calendar me-2 text-success"></i>Son Güncelleme</span>
                                <small class="text-muted">@DateTime.Now.ToString("dd.MM.yyyy")</small>
                            </div>
                        </div>
                        
                        <hr style="margin: 20px 0;">
                        
                        <div class="text-center">
                            <p class="mb-2"><strong>BB Gym Management</strong></p>
                            <p class="text-muted small">Versiyon 2.0.0</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stats-card:hover {
        transform: translateY(-5px);
    }
    
    .activity-item:hover {
        background: #e9ecef !important;
        transition: background 0.3s ease;
    }
</style>
